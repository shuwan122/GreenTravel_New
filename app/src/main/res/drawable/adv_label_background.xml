<?xml version="1.0" encoding="utf-8"?>

<!-- 标签的背景 label_background -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 标签选中时的背景 -->
<item android:state_selected="true">
    <shape>
        <stroke android:width="1dp" android:color="@color/GreenTheme9" />
        <corners android:radius="8dp" />
        <solid android:color="@android:color/white" />
    </shape>
</item>
<!-- 标签的正常背景 -->
<item>
    <shape>
        <stroke android:width="1dp" android:color="@color/labelDefaultBg" />
        <corners android:radius="8dp" />
        <solid android:color="@android:color/white" />
    </shape>
</item>
</selector>