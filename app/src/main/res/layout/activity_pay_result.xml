<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pay_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/arrow_back_black"
            android:gravity="center_vertical"
            android:text="  支付结果"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/pay_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:paddingRight="10dp"
            android:text="完成"
            android:textColor="@color/GreenTheme10" />
    </RelativeLayout>

    <View
        android:id="@+id/pay_divideLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/pay_rl"
        android:background="@color/divideLine" />

    <ImageView
        android:id="@+id/pay_result_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/pay_divideLine"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pay_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/pay_result_img"
        android:gravity="center"
        android:text=""
        android:textColor="@color/GreenTheme4"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pay_result_money"
        android:layout_width="wrap_content"
        android:layout_below="@+id/pay_result_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="￥ 20.50"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pay_check_order"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/pay_result_check_shape_corner"
        android:gravity="center"
        android:textColor="@color/GreenTheme4"
        android:text="前往我的订单中查看" />
</RelativeLayout>